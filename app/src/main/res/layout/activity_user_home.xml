<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".UserHome">


    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="275dp"
        android:layout_height="50dp"

        android:layout_above="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/addSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contactSupport"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="50dp"
        android:text="Add Screenshot" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/description"
        android:layout_width="275dp"
        android:layout_height="150dp"
        android:layout_above="@+id/addSS"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="50dp"
        android:hint="Please describe you issue here" />

    <Button
        android:id="@+id/contactSupport"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/signOutButtonUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="50dp"
        android:text="Contact Support"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="493dp" />

    <Button
        android:id="@+id/signOutButtonUser"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="50dp"
        android:text="Sign Out"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="493dp" />

</RelativeLayout>